@model List<keyseeker.Models.Game>

@{
    ViewData["Title"] = "Home Page";
}

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Price</th>
                <th>Store</th>
                <th>Link</th>
            </tr>
        </thead>
        
        <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <td>@game.Title</td>
                <td>@game.Price</td>
                <td>@game.Store</td>
                <td><a href="@game.Url" target="_blank">View</a></td>
            </tr>
        }
        </tbody>
    </table>
}
else if (!string.IsNullOrWhiteSpace(Context.Request.Query["query"]))
{
    <p>No results found.</p>
}