@model List<keyseeker.Models.Game>

<h2>Results</h2>

<style>
    .scrollable-container {
        flex-grow: 1;
        min-height: 100%;
        overflow-y: auto;
    }

    .table thead th {
        position: sticky;
        top: 0;
        background-color: #f8f9fa;
        z-index: 1;
    }
</style>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Price</th>
                <th>Store</th>
                <th>Link</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <td>@game.Title</td>
                <td>@game.Price</td>
                <td>@game.Store</td>
                <td><a href="@game.Url" target="_blank">View</a></td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No results found.</p>
}
